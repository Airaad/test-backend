generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String  @id @default(cuid())
  username        String  @unique
  email           String  @unique
  password        String
  profileImage    String?
  role            String
  hostedPlaces    Listing[]
  uploadedImages  Image[]
  addedReviews    Review[]
  createdAt       DateTime @default(now())
}

model Listing {
  id            String    @id @default(cuid())
  thumbnail     Json
  address       String
  description   String
  hostId        String
  host          User      @relation(fields: [hostId], references: [id])
  images        Image[]
  reviews       Review[]
  averageRating Int
  createdAt     DateTime  @default(now())
}

model Image {
  id          String    @id @default(cuid())
  url         String
  title       String
  description String
  hostId      String
  host        User      @relation(fields: [hostId], references: [id])
  placeId     String
  place       Listing   @relation(fields: [placeId], references: [id])
  createdAt   DateTime  @default(now())
}

model Review {
  id          String   @id @default(cuid())
  hostId      String
  host        User     @relation(fields: [hostId], references: [id])
  placeId     String
  place       Listing  @relation(fields: [placeId], references: [id])
  comment     String
  rating      Int
  createdAt   DateTime @default(now())
}