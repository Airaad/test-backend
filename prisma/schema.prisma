generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum userRole {
  regular
  host
}


model User {
  id              String  @id @default(cuid())
  username        String  @unique
  email           String  @unique
  password        String
  profileImage    String?
  role            userRole
  hostedPlaces    Listing[]
  addedReviews    Review[]
  bookings        Booking[]
  createdAt       DateTime @default(now())
}


model Listing {
  id            String    @id @default(cuid())
  thumbnail     String
  title         String
  address       String
  description   String
  hostId        String
  host          User      @relation(fields: [hostId], references: [id])
  images        Image[]
  reviews       Review[]
  booking       Booking[]
  price         Int
  priceTag      String
  averageRating Float
  createdAt     DateTime  @default(now())
}

model Image {
  id          String    @id @default(cuid())
  url         String
  title       String
  description String
  placeId     String
  place       Listing   @relation(fields: [placeId], references: [id])
  createdAt   DateTime  @default(now())
}

model Review {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  placeId     String
  place       Listing  @relation(fields: [placeId], references: [id])
  comment     String
  rating      Int
  createdAt   DateTime @default(now())
}

enum BookingStatus {
  pending
  confirmed
  cancelled
  completed
}


model Booking {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  placeId     String
  place       Listing  @relation(fields: [placeId], references: [id])
  startDate   DateTime 
  endDate     DateTime 
  status      BookingStatus  
  createdAt   DateTime @default(now())

  @@unique([placeId, startDate, endDate])
}

